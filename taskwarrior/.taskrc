# Reports
report.vit.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency
report.vit.description=Most urgent tasks to show in vit
report.vit.filter=status:pending limit:page
